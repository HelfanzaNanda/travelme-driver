<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:id="@+id/shape_of_view"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:shape_roundRect_bottomLeftRadius="10dp"
        app:shape_roundRect_bottomRightRadius="10dp">

        <FrameLayout
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>
    </com.github.florent37.shapeofview.shapes.RoundRectView>

    <TextView
        android:textStyle="bold"
        android:id="@+id/tv_order_in"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="30sp"
        android:textColor="#FFF"
        android:gravity="center"
        android:textSize="22sp"
        android:text="Pesanan Masuk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.card.MaterialCardView
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginBottom="10dp"
                    android:textSize="20sp"
                    android:text="Tanggal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginBottom="10dp"
                    android:textSize="20sp"
                    android:text="Jam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginBottom="10dp"
                    android:textSize="20sp"
                    android:text="Keberangkatan "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textSize="20sp"
                    android:text="Total Penumpang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_marginBottom="10dp"
                    android:textSize="20sp"
                    android:text="Berangkat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txt_hour"
                    android:layout_marginBottom="10dp"
                    android:textSize="20sp"
                    android:text="Berangkat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txt_departure"
                    android:layout_marginBottom="10dp"
                    android:textSize="20sp"
                    android:text="Keberangkatan "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txt_total_user"
                    android:textSize="20sp"
                    android:text="Total Penumpang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <ProgressBar
        android:layout_centerInParent="true"
        android:id="@+id/pb_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>